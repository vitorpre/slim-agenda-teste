{% extends "template/base.twig" %}

{% block head %}
    {{ parent() }}

{% endblock %}

{% block content %}

    <div class="container">

        <h1>Cadastro de Usu√°rio</h1>

        <form class="form-horizontal" method="post"
              {% if usuario.id != null %}
                action="{{ uri }}usuarios/alterar"
              {% else %}
                action="{{ uri }}usuarios/inserir"
              {% endif %}
        >

            {% if mensagem != null %}
                <div class="alert alert-{{ mensagem.classe }}" role="alert">
                    {{ mensagem.mensagem }}
                </div>
            {% endif %}

            <input type="hidden" name="id" value="{{ usuario.id }}" />

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome"
                               value="{{ usuario.nome }}">
                    </div>
                </div>
            </div>

            <input type="submit" class="btn btn-primary" value="Cadastrar" />
            <a href="{{ uri }}usuarios" ><button type="button" class="btn btn-default">Voltar</button></a>

        </form>

    </div>

{% endblock %}

{% block footer %}

    <script type="text/javascript">
        app_uri = "{{ uri }}";
    </script>

{% endblock %}